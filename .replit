modules = ["python-3.11", "nodejs-20", "python3"]

# This builds the frontend and starts the Python backend
run = "bash -c 'cd frontend && npm install && npm run build && cd .. && python main.py'"

hidden = ["node_modules", ".pythonlibs"]

[nix]
