modules = ["python-3.11", "nodejs-20", "python3"]

run = "cd frontend && npm install && npm run build && cd .. && python3 main.py"

hidden = [".config", ".git", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["python3", "main.py"]

[[ports]]
localPort = 5000
externalPort = 80

[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.typescript]
pattern = "**/*.{ts,tsx}"
syntax = "typescript"

[languages.javascript]
pattern = "**/*.{js,jsx}"
syntax = "javascript"

[env]
PYTHONPATH = "."

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"

[[workflows.workflow.tasks]]
name = "Frontend"
shell = "cd frontend && npm install && npm run build && cd .. && python3 main.py"
waitForPort = 5000
